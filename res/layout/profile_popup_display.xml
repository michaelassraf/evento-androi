<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/profile_popup_display_picture_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false" >

            <ImageView
                android:id="@+id/profile_popup_display_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_popup_display_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_popup_display_picture_layout"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#040404"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/profile_popup_display_sub_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/event_title"
            android:layout_below="@+id/profile_popup_display_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_popup_display_picture_layout"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#343434"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/profile_popup_display_smalll_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_popup_display_sub_title"
            android:layout_toRightOf="@+id/profile_popup_display_picture_layout"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#10bcc9"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profile_follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_popup_display_smalll_text"
            android:layout_toRightOf="@+id/profile_popup_display_picture_layout"
            android:layout_margin="10dp"
            android:focusable="false"
            android:textColor="@color/soft_grey"
            android:background="@color/translucent_black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:focusableInTouchMode="false"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>